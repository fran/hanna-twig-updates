{
  "name": "hanna",
  "version": "0.8.32",
  "description": "Monorepo for all code related to development tooling for Hanna (Reykjavík's design system)",
  "repository": "ssh://git@github.com:rvk-utd/hanna.git",
  "author": "Reykjavík (http://www.reykjavik.is)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "16",
    "yarn": ">=1.22",
    "npm": ">9999. Plz use yarn :-)"
  },
  "packageManager": "yarn@3.2.3",
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "lint": "eslint \"*.{mjs,js,ts,tsx}\" \"modules/*/*.{mjs,js,ts,tsx}\" \"modules/*/src/**/*.{mjs,js,ts,tsx}\"",
    "format:eslint": "eslint --fix \"*.{mjs,js,ts,tsx}\" \"modules/*/*.{mjs,js,ts,tsx}\" \"modules/*/src/**/*.{mjs,js,ts,tsx}\"",
    "format:prettier": "prettier --write \"*.{json,md}\" \"modules/*/*.{json,md}\" \"modules/*/src/**/*.{json,md,html}\"",
    "format": "yarn run format:eslint && yarn run format:prettier",
    "postinstall": "sh .husky/post-clone  &&  yarn run husky install"
  },
  "devDependencies": {
    "@hugsmidjan/hxmstyle": "^7.1.1",
    "@types/eslint": "^8",
    "@types/gulp": "^4",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^16",
    "@types/ospec": "^4",
    "@types/prettier": "^2",
    "concurrently": "^7.0.0",
    "esbuild": "^0.15.18",
    "eslint": "^8.35.0",
    "glob": "^10.0.0",
    "husky": "^7.0.0",
    "jsdom": "^19.0.0",
    "node-gyp": "^9.0.0",
    "onchange": "^7.1.0",
    "ospec": "^4.1.7",
    "prettier": "^2.8.2",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3"
  },
  "hxmstyle": {
    "options": {
      "typescript": true,
      "react": true
    }
  }
}
