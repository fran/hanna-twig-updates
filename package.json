{
  "name": "hanna",
  "description": "Monorepo for all code related to development tooling for Hanna (Reykjavík's design system)",
  "repository": "ssh://git@github.com:rvk-utd/hanna-components.git",
  "author": "Reykjavík (http://www.reykjavik.is",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "16",
    "yarn": ">=1.22",
    "npm": ">9999. Plz use yarn :-)"
  },
  "packageManager": "yarn@3.1.1",
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "lint": "eslint \"*.{js,ts,tsx}\" \"modules/*/src/**/*.{js,ts,tsx}\"",
    "format:eslint": "eslint --fix  \"*.{js,ts,tsx}\"  \"modules/*/*.{js,ts,tsx}\" \"modules/*/src/**/*.{js,ts,tsx}\"",
    "format:prettier": "prettier --write \"*.{json,md}\"  \"modules/*/*.{json,md}\" \"modules/*/src/**/*.{json,md,html}\"",
    "format": "yarn run format:eslint \n yarn run format:prettier",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@hugsmidjan/hxmstyle": "^6.0.0",
    "@types/glob": "^7",
    "@types/gulp": "^4",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^16",
    "@types/ospec": "^4",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "concurrently": "^7.0.0",
    "del": "^6.0.0",
    "esbuild": "^0.14.34",
    "esbuild-plugin-d.ts": "^1.1.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-destructure-depth": "^1.0.3",
    "eslint-plugin-destructuring": "^2.2.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-total-functions": "^5.0.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "glob": "^7.2.0",
    "husky": "^7.0.0",
    "jsdom": "^19.0.0",
    "node-gyp": "^9.0.0",
    "onchange": "^7.1.0",
    "ospec": "^4.1.1",
    "prettier": "^2.5.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  },
  "hxmstyle": {
    "options": {
      "react": true,
      "typescript": true
    },
    "dependenciesAdded": [
      "@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser",
      "eslint",
      "eslint-config-prettier",
      "eslint-plugin-deprecation",
      "eslint-plugin-destructure-depth",
      "eslint-plugin-destructuring",
      "eslint-plugin-import",
      "eslint-plugin-prettier",
      "eslint-plugin-react",
      "eslint-plugin-react-hooks",
      "eslint-plugin-simple-import-sort",
      "eslint-plugin-total-functions",
      "eslint-plugin-unused-imports",
      "prettier"
    ]
  }
}
