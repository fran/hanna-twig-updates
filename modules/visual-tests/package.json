  "license": "MIT",
  "scripts": {
    "webserver:build": "yarn run remix build",
    "webserver:dev": "PORT=7357  yarn run remix dev",
    "webserver:start": "PORT=7357 yarn run remix-serve _remix-build",
    "webserver:testingmode": "yarn run webserver:build && yarn run webserver:start",
    "__webserver:testingmode": "yarn run webserver:dev",
    "test": "echo \"Running Visual Regression Tests.  Please wait...\n\"  &&  npx playwright test  ||  (((cd ../hanna-css && yarn run dev:server) & yarn run webserver:dev & (sleep 2.5 && open http://localhost:7357/review?errored))  &&  (exit 1))"
  },
  "dependencies": {
    "@remix-run/node": "^1.11.1",
    "@remix-run/react": "^1.11.1",
    "@remix-run/serve": "^1.11.1",
    "@reykjavik/hanna-css": "workspace:*",
    "@reykjavik/hanna-react": "workspace:*",
    "@reykjavik/hanna-utils": "workspace:*",
    "glob": "^8.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.27.1",
    "@remix-run/dev": "^1.11.1",
    "@remix-run/eslint-config": "^1.11.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9"
  },
  "engines": {
    "node": "16"
  },
  "sideEffects": false
}
