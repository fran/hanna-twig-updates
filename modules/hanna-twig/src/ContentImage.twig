{{ attach_library('storybook/ContentImage') }}

<figure class="ContentImage">
	{% if caption or credit %}
		<figcaption className="ContentImage__caption">
			{% if caption %}<span className="ContentImage__text">{{caption}}</span>{% endif %}
			{% if credit %}<small className="ContentImage__credit">{{credit}}</small>{% endif %}
		</figcaption>
	{% endif %}
	<picture class="ContentImage__image">
		{{ image }}
	</picture>
</figure>
